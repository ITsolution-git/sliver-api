                        <th>Account</th>
                        <th>Date</th>
                    </tr>
                    <% for(var i=0; i<locals.notLogged.length; i++) {%>
                    <tr>
                        <td><%= locals.notLogged[i].name %></td>
                        <td><%= locals.notLogged[i].date %></td>
                    </tr>
                    <% } %>
                </table>
            
        </div>
    </div>
